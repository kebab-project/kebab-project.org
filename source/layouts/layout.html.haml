!!!5
%html{lang: 'en', class: 'no-js'}
  %head
    %meta{charset: 'utf-8'}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    / Use title if it's in the page YAML frontmatter
    %title= yield_content :title || 'The Middleman'
    = stylesheet_link_tag 'application',
                          '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'
    = yield_content :head
  %body.main{class: @page || 'page'}
  = yield

  / Javascripts
  = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js',
                           '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.0/modernizr.min.js',
                           'application'